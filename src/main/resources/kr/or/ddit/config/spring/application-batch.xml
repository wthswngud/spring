<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:batch="http://www.springframework.org/schema/batch"
	xsi:schemaLocation="http://www.springframework.org/schema/batch http://www.springframework.org/schema/batch/spring-batch.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean class="org.springframework.batch.test.JobLauncherTestUtils"/>
	
	<batch:job-repository 
		data-source="datasource"
		transaction-manager="transactionManager"
		isolation-level-for-create="DEFAULT"
	/>
	
	<bean id="jobLauncher" class="org.springframework.batch.core.launch.support.SimpleJobLauncher">
		<property name="jobRepository" ref = "jobRepository"/>
	</bean>
	
	<bean id="yogultItemReader" class="org.mybatis.spring.batch.MyBatisCursorItemReader">
		<property name="sqlSessionFactory" ref="sqlSessionFactory"/>
		<property name="queryId" value="batch.getCycleList"/>
<!-- 		<property name="parameterValues"> -->
<!-- 			<map> -->
<!-- 				<entry key="ym" value="#{jobParameters[ym]}"/> -->
<!-- 			</map> -->
<!-- 		</property> -->
	</bean>
	
	<bean id="yogultItemProcessor" class="kr.or.ddit.batch.YogultItemProcessor" scope="step"/>
	
	<bean id="yogultItemWriter" class="kr.or.ddit.batch.MyBatisCustomWriter">
		<property name="sqlSessionFactory" ref = "sqlSessionFactory"/>
		<property name="statementId" value="batch.mergeDaily"></property>
	</bean>
	
	<batch:job id="yogultJob" restartable="true">
		<batch:step id="step1">
			<batch:tasklet allow-start-if-complete="true">
				<batch:chunk commit-interval="1"
							 reader="yogultItemReader"
							 processor="yogultItemProcessor"
							 writer="yogultItemWriter">
				</batch:chunk>
			</batch:tasklet>
		</batch:step>
	</batch:job>
</beans>
